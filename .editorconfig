root = true

[*]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{*.{py,md},Dockerfile}]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[{Makefile,**.mk,**.mk.j2}]
# Use tabs for indentation (Makefiles require tabs)
indent_style = tab

[.terraform-version]
insert_final_newline = false
